      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // ðŸ‘‡ Detta Ã¤r det viktiga fÃ¶r JSX/React 17+ (automatic runtime)
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    // HjÃ¤lper TS hitta typerna fÃ¶r Vite och React/DOM
    "types": [
      "vite/client",
